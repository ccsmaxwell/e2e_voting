<%- include('./inc/header', { page_title: "eVoting", css: "<link href='/css/eManVoter.css' rel='stylesheet' type='text/css' />"}); %>

<main>
	<div class="row">
		<div class="col s12 l4">
			<div class="card">
				<div class="card-content">
					<h1 class="center-align thin">Manage voters</h1>
				</div>
			</div>
		</div>

		<div class="col s12 l8">
			<ul id="voter_list" class="collection z-depth-1">
			</ul>

			<div id="pagination"></div>

			<div class="fixed-action-btn">
				<a id="add_btn" class="btn-floating btn-large red">
					<i class="large material-icons">add</i>
				</a>
			</div>
		</div>
	</div>

	<div id="add_modal" class="modal modal-fixed-footer">
		<div class="modal-content cyan darken-1">
			<ul class="collection">
				<li class="collection-item">
					<div class="row">
						<div class="input-field col s12 m6">
							<input id="voterID" type="text">
							<label for="voterID">Voter ID</label>
						</div>
						<div class="input-field col s12 m6">
							<input id="voterEmail" type="text">
							<label for="voterEmail">Voter Email</label>
						</div>
					</div>
				</li>
			</ul>

			<div id="btn_add_li">
				<a class="btn-floating btn-small waves-effect waves-light deep-purple"><i class="material-icons">add</i></a>
			</div>

			<div class="card" id="admin_card">
				<div class="row">
					<div class="col s12">
						<h5>Election administrator key</h5>
					</div>
					<div class="input-field col s12">
						<textarea id="add_admin_pri" class="materialize-textarea"></textarea>
						<label for="add_admin_pri">Private key (for signing only, wont send to server)</label>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a class="modal-close waves-effect waves-green btn-flat">Cancel</a>
			<a class="modal-close waves-effect waves-green btn-flat">Add</a>
		</div>
	</div>
</main>

<%- include('./inc/footer', {script: "<script src='/js/lib/materialize-pagination.js'></script><script src='/js/eManVoter.js'></script>"}); %>